.activity-box {
  width: 702rpx;
  border-radius: 8rpx;
  margin: 16rpx auto 0;
  background: #ebebeb;
  overflow: hidden;
  margin-bottom:116rpx;
}

.swiper-item {
  display: block;
  width: 702rpx;
  height: 280rpx;
  background-color: rgba(215, 222, 229, 1);
  border-radius: 0 0 10rpx 10rpx;
}

.swiper-image {
  width: 100%;
  height: 100%;
}

.line-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 20rpx;
  transform: translateY(6rpx);
}

.activity-poster {
  width: 702rpx;
  height: 240rpx;
  display: block;
}

.activity-info {
  padding: 40rpx 25rpx;
  background: #fff;
}

.activity-name {
  color: #202224;
  font-size: 30rpx;
  padding-bottom:32rpx;
  border-bottom: 1rpx dashed #ebebeb;
  margin-bottom: 22rpx;
}

.activity-time, .activity-address {
  color: #818A92;
  font-size: 22rpx;
  margin-top: 13rpx;
}
.channel-title{
  color:#202224;
  font-size:30rpx;
  border-bottom:1rpx solid #FFEAEB;
  padding-bottom:24rpx;
  font-weight: bold;
}
.activity-intro{
  padding:28rpx 26rpx;
  background:#fff;
}
.rich-text{
  margin:36rpx 26rpx; 
  color:#4E5056;
  font-size:28rpx;
  line-height: 38rpx;
}

.bottom-bar{
  background:#fff;
  height:98rpx;
  line-height:98rpx;
  display: flex;
  position:fixed;
  bottom:0;
  /* bottom:env(safe-area-inset-bottom); */
  left:0;
  width:750rpx;
}
.bottom-bar::after{
  position: absolute;
  content:'';
  left:0;
  top:100%;
  width:750rpx;
  height:80rpx;
  background:#fff;
}
.bottom-left{
  width:156rpx;
  padding-left:24rpx;
  position: relative;
}
.bottom-left::after{
  position:absolute;
  content: '';
  width:2rpx;
  height:60rpx;
  right:0;
  top:20rpx;
  background:#D8DEE5;
}
.share-btn{
  width:44rpx;
  height:44rpx;
  position:absolute;
  top:13rpx;
  left:56rpx;
}
.share-txt{
  position:absolute;
  top:13rpx;
  left:0rpx;
  width:156rpx;
  line-height:120rpx;
  text-align:center;
  font-size:24rpx;
  color:#4E5056;
}

.bottom-right{
  flex:1;
  text-align:center;
}
.bottom-right-btn{
  position:absolute;
  font-size:32rpx;
  width:400rpx;
  height:72rpx;
  line-height:72rpx;
  background:#FF943E;
  color:#fff;
  border-radius:36rpx;
  right:24rpx;
  top:14rpx;
}
.gray{
  background:#C4CACE;
}